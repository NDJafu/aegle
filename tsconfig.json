{
  "compilerOptions": {
    "emitDeclarationOnly": false,
    "declaration": true,
    "target": "es2021",
    "module": "CommonJS",
    "strict": true,
    "newLine": "LF",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "tests"]
}
